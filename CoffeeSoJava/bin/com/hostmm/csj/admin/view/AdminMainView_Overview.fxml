            <Label text="Choose date :">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <DatePicker fx:id="dpDate" />
         </children>
      </HBox>
      <AnchorPane VBox.vgrow="ALWAYS">
         <children>
            <PieChart fx:id="pieDate" layoutX="37.0" layoutY="61.0" prefHeight="242.0" prefWidth="338.0" />
            <Label layoutX="37.0" layoutY="28.0" text="Selected Date Sale">
               <font>
                  <Font name="Arial Bold" size="15.0" />
               </font></Label>
            <PieChart fx:id="pieMonth" layoutX="408.0" layoutY="61.0" prefHeight="250.0" prefWidth="367.0" />
            <Label layoutX="408.0" layoutY="28.0" text="Selected Date's Month Sale">
               <font>
                  <Font name="Arial Bold" size="15.0" />
               </font></Label>
            <PieChart fx:id="pieYear" layoutX="240.0" layoutY="334.0" prefHeight="250.0" prefWidth="501.0" />
            <Label layoutX="37.0" layoutY="450.0" text="Selected Date's Year Sale">
               <font>
                  <Font name="Arial Bold" size="15.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</VBox>
