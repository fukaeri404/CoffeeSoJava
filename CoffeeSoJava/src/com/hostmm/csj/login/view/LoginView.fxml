<AnchorPane prefHeight="500.0" prefWidth="300.0" style="-fx-background-color: #704332;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hostmm.csj.login.controller.LoginController">
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="75.0" layoutY="28.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../style/image/coffee-cup.png" />
         </image>
      </ImageView>
      <Label layoutX="75.0" layoutY="200.0" text="Coffee So `JAVA`" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </Label>
      <JFXTextField fx:id="tfUsername" layoutX="24.0" layoutY="247.0" prefHeight="30.0" prefWidth="250.0" promptText="enter username" style="-fx-background-color: #fff;" />
      <StackPane alignment="CENTER_RIGHT" layoutX="24.0" layoutY="290.0" prefHeight="30.0">
         <children>
            <TextField fx:id="tfPassword" prefHeight="30.0" />
            <JFXPasswordField fx:id="pfPassword" prefHeight="30.0" prefWidth="250.0" promptText="enter password" style="-fx-background-color: #fff;" />
            <ImageView fx:id="imgviewShowPassword" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../style/image/eyes%20(2).png" />
               </image>
               <StackPane.margin>
                  <Insets right="5.0" />
               </StackPane.margin>
            </ImageView>
         </children>
      </StackPane>
      <JFXButton fx:id="btnLogin" layoutX="111.0" layoutY="441.0" onAction="#processLogin" prefHeight="30.0" prefWidth="78.0" style="-fx-background-color: #fff;" text="Login" />
      <Label fx:id="lblError" alignment="CENTER" layoutX="45.0" layoutY="404.0" prefHeight="18.0" prefWidth="209.0" text="username or password is incorrect" textFill="#fc0000">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font></Label>
      <JFXComboBox fx:id="cobRole" focusColor="WHITE" layoutX="86.0" layoutY="343.0" prefHeight="26.0" prefWidth="126.0" promptText="  What's your role?" style="-fx-background-color: #fff;" unFocusColor="#704332" />
   </children>
</AnchorPane>
